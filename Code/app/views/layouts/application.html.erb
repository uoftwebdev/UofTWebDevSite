<!DOCTYPE html>
<html lang="en">
	<head>
		<title>U of T Web Dev</title>
		<meta name="UofT" content="width=device-width, initial-scale=1.0">
		<script src="http://ajax.googleapis.com/ajax/libs/jquery/1.10.2/jquery.min.js"></script>
		<%= stylesheet_link_tag "application", :media => "all" %>
		<%= javascript_include_tag "application" %>
		<%= csrf_meta_tags %>
	</head>
	<body>
		<div class="container">
			<div class="masthead">
				<div class="row">
					<div class="span2">
						<%= image_tag "logo.jpg"%>
					</div>
					<div class="span10">
						<h1 class="muted" align="center">U of T Web Development <h1 id=""></h1>
					</div>
				</div>
				<br/>
				<div class="navbar">
					<div class="navbar-inner">
						<div class="container">
							<ul class="nav">
								<li class="<%= @currentPage[:home] %>">
									<%= link_to "Home", "/home" %>
								</li>
								<li class="<%= @currentPage[:calendar] %>">
									<%= link_to "Meeting calendar", "/calendar" %>
								</li>
								<li class="<%= @currentPage[:resources] %>">
									<%= link_to "Learning resources", "/resources" %>									
								</li>
								<li class="<%= @currentPage[:about] %>">
									<%= link_to "About", "/about" %>
								</li>
								<li class="<%= @currentPage[:contact] %>">
									<%= link_to "Contact", "/contact" %>
								</li>
							</ul>
						</div>
					</div>
				</div>
			</div>
			<%= yield %>
			<div class="footer">
				<p>
					&copy; U of T Web Development club 2013
				</p>
			</div>
			<div class="hide">
				<span id="var_currentPage"></span>				
			</div>
		</div>
	</body>
</html>